@model TheGymWebsite.ViewModels.EditUserPasswordViewModel
@*@inject UserManager<ApplicationUser> signInManager*@

@{
    ViewData["Title"] = "Edit User Password";
}
<div class="container-fluid gym-background min-vh-100">
    <div class="p-4 offset-sm-0 offset-md-1">
        <form method="post" asp-action="EditUserPassword" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-row">
                <div class="col-12 col-sm-8 col-md-7 col-lg-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="hidden" />
                        <input asp-for="Email" class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-12 col-sm-8 col-md-7 col-lg-6">
                    <div class="form-group">
                        <label asp-for="CurrentPassword" class="control-label"></label>
                        <input asp-for="CurrentPassword" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />

            <div class="form-row">
                <div class="col-12 col-sm-8 col-md-7 col-lg-6">
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <small>Password must be at least 8 characters long, containing letters and numbers</small>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-12 col-sm-8 col-md-7 col-lg-6">
                    <div class="form-group">
                        <label asp-for="ConfirmNewPassword" class="control-label"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-inline col-12 col-sm-8 col-md-7 col-lg-6 m-0 p-0 mt-3 mb-3 justify-content-between">
                <button type="submit" class="btn-theme btn-submit">Submit</button>
                <a asp-action="Index" asp-controller="Member" class="btn btn-dark btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>