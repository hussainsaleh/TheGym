@model TheGymWebsite.ViewModels.GymViewModel

@{
    ViewData["Title"] = "Edit Gym Details";
}

<div class="container p-3">
    <form method="post" asp-action="EditGym" asp-controller="Admin">
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" value="@Model.Id" disabled />
        </div>
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="GymName"></label>
            <input asp-for="GymName" class="form-control" />
        </div>
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="AddressLineOne"></label>
            <input asp-for="AddressLineOne" class="form-control" />
        </div>
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="AddressLineTwo"></label>
            <input asp-for="AddressLineTwo" class="form-control" />
        </div>
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="Town"></label>
            <input asp-for="Town" class="form-control" />
        </div>
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="Postcode"></label>
            <input asp-for="Postcode" class="form-control" />
        </div>
        <div class="form-group col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <label asp-for="Telephone"></label>
            <input asp-for="Telephone" class="form-control" />
        </div>

        <div class="form-inline mt-5 mb-5 col-auto">
            <button type="submit" class="btn btn-outline-warning mr-3">Submit changes</button>
            <a asp-action="ListGyms" asp-controller="Admin" class="btn btn-outline-dark ml-3">Cancel</a>
        </div>

        <br />
    </form>
</div>

