@model MembershipDealViewModel

@{
    ViewData["Title"] = "Edit Membership deals";
}

<div class="container p-3">
    <form method="post" asp-controller="Admin" asp-action="EditMembershipDeal">
        <div class="form-group">
            <input asp-for="Id" type="hidden" />
        </div>
        <div class="form-group">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" value="@Enums.GetDisplayName(Model.Duration)" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <label asp-for="Price"></label>
                <span>£</span>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-inline col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 mt-3 mb-3 justify-content-between">
                <button type="submit" class="btn btn-warning btn-submit">Submit</button>
                <a asp-action="MembershipDeals" asp-controller="Home" class="btn btn-dark btn-cancel">Cancel</a>
            </div>
        </div>
    </form>
</div>

