@model MembershipDealViewModel

@{
    ViewData["Title"] = "Add a new Membership deal";
}

<div class="container p-3">
    <form asp-controller="Admin" asp-action="AddMembershipDeal" method="post">
        <div class="form-group">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <label asp-for="Duration" class="control-label"></label>
                <select asp-for="Duration" class="form-control"
                        asp-items="Html.GetEnumSelectList<Enums.MembershipDuration>()">
                </select>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <label asp-for="Price"></label>
                <span>£</span>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-inline col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 mt-3 mb-3 justify-content-between">
            <button type="submit" class="btn btn-outline-success btn-submit">&#43; Add gym</button>
            <a asp-action="MembershipDeals" asp-controller="Home" class="btn btn-dark btn-cancel">Cancel</a>
        </div>
    </form>
</div>

