

    <div class="container-fluid min-vh-100 gym-background">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-5 col-xl-4 text-center">
                <div>
                    <br />
                    <div>
                        <img src="~/images/GymLogoTranspBlack.png" class="img-fluid" />
                    </div>
                    <div>
                        <img src="~/images/GymMoto.png" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center pt-0 pl-4 pr-4 pb-4">
            <a asp-controller="Account" asp-action="RegisterMember" class="btn-join text-light btn-submit">Join now</a>
        </div>
        <div class="row p-md-5">
            <div id="GymSlides" class="carousel slide gym-slides" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#GymSlides" data-slide-to="0" class="active"></li>
                    <li data-target="#GymSlides" data-slide-to="1"></li>
                    <li data-target="#GymSlides" data-slide-to="2"></li>
                    <li data-target="#GymSlides" data-slide-to="3"></li>

                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Gym1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Gym2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Gym3.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Gym4.jpg" alt="Fouth slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#GymSlides" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#GymSlides" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>


