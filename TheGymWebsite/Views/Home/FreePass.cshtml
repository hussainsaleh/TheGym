@model FreePassViewModel

@{
    ViewData["Title"] = "Free 1-Day Pass";
}

<div class="container-fluid gym-background min-vh-100">
    <div class="col-sm-10 col-md-8 col-lg-6 col-auto p-3 offset-md-1">
        <form method="post" asp-controller="Home" asp-action="FreePass">
            <div class="p-sm-1 p-md-2 p-lg-3 text-justify">
                <p>Want to experience our gym? Request a 1-day FREE pass by filling the form below. We'll book you in:</p>
                <div class="form-group">
                    <input asp-for="DateIssued" value="@DateTime.Now" type="hidden" />
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <button type="submit" class="btn-theme btn-submit">Get My Free Pass</button>
                </div>
            </div>
        </form>
    </div>
</div>
